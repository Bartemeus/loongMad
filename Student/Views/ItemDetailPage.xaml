<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Student.Views.ItemDetailPage" >
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Заголовок:" FontSize="Medium" />
        <Label Text="{Binding Item.Text}" FontSize="Small" />
        <Image Source="{Binding Item.Url}" />
        <Label Text="Подробнее:" FontSize="Medium" />
        <Label Text="{Binding Item.Description}" FontSize="Small" />
    </StackLayout>
</ContentPage>